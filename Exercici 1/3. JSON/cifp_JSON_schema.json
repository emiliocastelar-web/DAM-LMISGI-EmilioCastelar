{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },

    "alumne": {
      "type": "array",
      "items": { "$ref": "#/$defs/alumne" }
    },
    
    "professor": {
      "type": "array",
      "items": { "$ref": "#/$defs/professor" }
    }
  },
  "additionalProperties": false,

  "$defs": {
    "alumne": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "nom": { "type": "string" },
        "llinatges": { "type": "string" },
        "data_naixement": { "type": "string" },
        "correu": { "type": "string" },
        "telefon": { "type": "string" },
        "adreça": { "type": "string" },
        "data_matricula": { "type": "string" },
        "curs": {
          "type": "string",
          "enum": ["DAM", "DAW", "ASIX", "SMX", "SEIA", "ER", "AUT"]
        }
      },
      "required": ["id", "nom", "llinatges", "data_matricula", "curs"],
      "additionalProperties": false
    },

    "professor": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "nom": { "type": "string" },
        "llinatges": { "type": "string" },
        "data_naixement": { "type": "string" },
        "correu": { "type": "string" },
        "telefon": { "type": "string" },
        "adreça": { "type": "string" },
        "data_incorporacio": { "type": "string" },
        "departament": {
          "type": "string",
          "enum": ["Informàtica", "Electricitat", "Automoció"]
        },
        "assignatura": {
          "type": "array",
          "items": { "$ref": "#/$defs/assignatura" }
        }
      },
      "required": ["id", "nom", "llinatges", "data_incorporacio", "departament"],
      "additionalProperties": false
    },

    "assignatura": {
      "type": "object",
      "properties": {
        "id_assignatura": { "type": "integer" },
        "cicle": {
          "type": "string",
          "enum": ["DAM", "DAW", "ASIX", "SMX", "SEIA", "ER", "AUT"]
        },
        "nom_assignatura": { "type": "string" },
        "data_inici": { "type": "string" },
        "data_final": { "type": "string" }
      },
      "required": ["id_assignatura", "cicle", "nom_assignatura"],
      "additionalProperties": false
    }
  }
}  